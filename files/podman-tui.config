config podman-tui 'config'
	option enabled '1'
	option local_socket '/run/podman/podman.sock'
	option config_dir '/etc/podman-tui'
	option log_level 'info'
	option color_mode '256'
	
config connection 'localhost'
	option uri 'unix:///run/podman/podman.sock'
	option default '1'
	option enabled '1'

# 示例远程连接配置（默认禁用）
config connection 'remote_example'
	option uri 'ssh://user@remote-host:22/run/user/1000/podman/podman.sock'
	option identity '/root/.ssh/id_rsa'
	option enabled '0'
